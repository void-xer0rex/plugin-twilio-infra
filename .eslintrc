{
  "extends": [
    "twilio"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "no-console": "off",
    "mocha/no-exclusive-tests": "error",
    "node/no-extraneous-require": [
      "error",
      {
        "allowModules": [
          "lodash",
          "request",
          "q"
        ]
      }
    ],
    "import/no-unresolved": "warn",
    "import/order": "warn",
    "no-use-before-define": "warn",
    "consistent-return": "warn"
  }
}